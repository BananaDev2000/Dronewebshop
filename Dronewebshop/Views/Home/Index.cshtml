@model Dronewebshop.Models.ProductRepository

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="m-3">

    <h1>Droneshop.be - Catalogus</h1>

    <form asp-action="Index" asp-controller="Home">
        <table class="table">
        <tr class="">
            <td>ArtNr</td>
            <td>Naam</td>
            <td>Foto</td>
            <td>Verkoopprijs</td>
            <td>Voorraad</td>
            <td></td>
        </tr>
                    @foreach (var product in Model.Producten)
            {
                <tr>
                    <td>@product.ArtNr</td>
                    <td>@product.Naam</td>
                    <td><img src="@Url.Content("~/images/" + product.Fotonaam + ".jpg")"/></td>
                    <td>@product.Prijs</td>
                    <td>@product.Voorraad</td>
                    <td><a>Voeg toe aan winkelmandje...</a></td>
                </tr>
            }

        </table>
        <input type="submit" value="Bekijk de inhoud van het winkelmandje"/>
    </form>
        <a asp-action="Afmelden">Afmelden</a>
    </body>
</html>
